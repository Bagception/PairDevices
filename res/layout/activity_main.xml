<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".AddNewBagStartActivity" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Paired Devices"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/noPairedDevices"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="There are no paired Devices"
            android:visibility="invisible" />

        <ListView
            android:id="@+id/pairedDevices"
            android:layout_width="fill_parent"
            android:layout_height="170dp" />

        <Button
            android:id="@+id/scandevice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:enabled="true"
            android:onClick="onScanClick"
            android:text="Scan for new Bag" />

        <ListView
            android:id="@+id/foundDevices"
            android:layout_width="fill_parent"
            android:layout_height="170dp" />
    </LinearLayout>

</ScrollView>